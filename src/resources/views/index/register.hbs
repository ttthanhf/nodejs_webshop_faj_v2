<div class="container">
    <a href="/">FAJ - Fruit And Juice</a>
    <div class="item">
        <form method="POST">
            <span class="title">Register</span>
            <input type="text" class="text-input" placeholder="Username" name="username">
            <input type="password" class="text-input" placeholder="Password" name="password">
            <input type="password" class="text-input" placeholder="Re-type Password" name="retypePassword"><br>
            {{#if error}}
            <span style="color: red;">{{error}}</span><br>
            {{/if}}
            {{#if sucess}}
            <a href="/login"><span style="color: green;">{{sucess}}</span></a><br>
            {{/if}}
            <input type="submit" value="Register" id="btn"><br>
        </form>
        <a href="/login">Already have an account ? Click here</a>
    </div>
</div>